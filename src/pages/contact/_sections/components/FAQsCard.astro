---
// [Components]
import FAQsAccordian from './FAQsAccordian.astro';

// [Type]
interface Props {
	title: string;
	faqs: { question: string; answer: string }[];
}

// [Props]
const { title, faqs } = Astro.props;
---

<div class="container max-w-3xl mx-auto">
	<h3 class="text-xl font-bold text-primary-orange uppercase">{title}</h3>
	<div class="">
		{
			faqs.map((faq) => (
				<FAQsAccordian
					question={faq.question}
					answer={faq.answer}
				/>
			))
		}
	</div>
</div>
