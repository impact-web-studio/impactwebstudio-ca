---
// [Components]
import ContactInfoItem from './ContactInfoItem.astro';

// [Data]
import { CompanyInfo } from '../../../../_data/client';

// [Type Definition]
interface ContactInfo {
	field: string;
	value: string;
	link?: string;
	icon: string;
}

// [Logic]
const emailInfo = CompanyInfo.find(
	(item) => item.field === 'Email'
) as ContactInfo;
const whatsappInfo = CompanyInfo.find(
	(item) => item.field === 'WhatsApp'
) as ContactInfo;

const contactInfo = [emailInfo, whatsappInfo].filter(Boolean);
---

<ul class="flex flex-col gap-4">
	{
		contactInfo.map((info) => (
			<ContactInfoItem
				field={info.field}
				icon={info.icon}
				link={info.link || '#'}
				value={info.value}
			/>
		))
	}
</ul>
