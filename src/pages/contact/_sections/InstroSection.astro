---
import { Image } from 'astro:assets';
// [Layout]
import SectionContainer from '../../../components/global/SectionContainer.astro';

// [Components]
import ContactInfoGroup from './components/ContactInfoGroup.astro';
import ContactForm from './ContactForm.astro';

// [Assets]
import TorontoCnRogers from '@assets/toronto_cn_rogers.webp';
---

<SectionContainer
	containerClass="items-center gap-20 desktop:items-start desktop:flex-row desktop:gap-10 desktop:justify-between"
	containerType="contain"
>
	<div class="wrapper desktop:max-w-1/2 flex flex-col gap-10">
		<div class="image-wrapper overflow-hidden rounded-xl w-fit h-fit">
			<Image
				src={TorontoCnRogers}
				alt="toronto overview"
				height={500}
				width={800}
				class="object-cover"
			/>
		</div>
		<div class="flex flex-col gap-10">
			<div class="description flex flex-col gap-5">
				<p>
					Send us an email and let us know everything you want out of a new
					site. We respond to everyone within 24 hours of contacting us.
				</p>
				<p>
					Got questions? We got answers, check out our FAQs section below for
					answers to our most common inquiries. If your question isnâ€™t there,
					let us know using the contact form to the right.
				</p>
			</div>
			<ContactInfoGroup />
		</div>
	</div>
	<div class="w-full">
		<ContactForm />
	</div>
</SectionContainer>
