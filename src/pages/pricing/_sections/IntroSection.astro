---
import { Image } from 'astro:assets';

// [Layout]
import SectionContainer from '../../../components/global/SectionContainer.astro';

// [Components]
import SectionHeaderImage from '../../../components/global/subpage/SectionHeaderImage.astro';
import PageHeader from '../../../components/global/subpage/PageHeader.astro';
import PageBody from '../../../components/global/subpage/PageBody.astro';
import ButtonPrimaryCta from '../../../components/ButtonPrimaryCta.astro';

// [Assets]
import PiggyBank from '../../../assets/personal-savings.svg';
---

<SectionContainer containerType="contain">
	<SectionHeaderImage>
		<div slot="top-right">
			<PageHeader
				page="Plans & pricing"
				title="choose the best plan for your business"
			/>
			<PageBody
				description="We offer flexible package options to help with all budget...ipsum. we offer flexible package options to help with all budget...ipsum "
			/>
			<div class="button-wrapepr">
				<ButtonPrimaryCta />
			</div>
		</div>
		<div slot="bottom-left">
			<Image
				src={PiggyBank}
				alt="piggy bank"
				height={500}
				width={500}
			/>
		</div>
	</SectionHeaderImage>
</SectionContainer>
