---
import { Image } from 'astro:assets';
const { image, class: className = '' } = Astro.props;
---

<div class='relative'>
	<Image
		src={image}
		class={`w-full h-full object-cover ${className}`}
		alt='Kenny Nguyen Headshot'
		height={500}
		width={500}
	/>
	<div
		class='quote-container p-8 rounded-2xl absolute bottom-0 left-1/2 -translate-x-1/2 translate-y-1/2 w-80 bg-white shadow-lg'
	>
		<h3>title</h3>
		<p>quote</p>
		<span>kenny</span>
		<span>role</span>
	</div>
</div>
