---
// [Astro]
import { Image } from 'astro:assets';

// [Components]
import SectionContainer from '../../components/global/SectionContainer.astro';
import WhatWeOfferHeader from './components/WhatWeOfferHeader.astro';
import OfferCardGroup from '../../components/cards/OfferCardGroup.astro';
import ButtonPrimaryCta from '../../components/ButtonPrimaryCta.astro';
---

<SectionContainer sectionClassName='bg-offwhite'>
	<div class='flex flex-col lg:flex-row-reverse lg:justify-between'>
		<Image
			src='/src/assets/website-development.webp'
			alt='Team working together to put together a website'
			width='600'
			height='400'
		/>
		<WhatWeOfferHeader />
	</div>
	<div class='div'>
		<OfferCardGroup />
		<ButtonPrimaryCta className='self-center' />
	</div>
</SectionContainer>
