---
import performanceMetrics from '../../../data/performanceMetrics';
---

<ul
	class="grid grid-cols-2 gap-y-3 gap-x-4 sm:gap-x-5 tablet:grid-cols-4 desktop:gap-x-5"
>
	{
		performanceMetrics.map((metric) => (
			<li class="flex flex-col gap-1 desktop:w-1/4">
				<p class="font-bold text-[2rem] opacity-100 font-secondary">
					{metric.metric}
				</p>
				<p class="capitalize whitespace-break-spaces">{metric.description}</p>
			</li>
		))
	}
</ul>
