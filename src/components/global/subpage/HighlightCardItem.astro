---
const { description = '' } = Astro.props;
---

<li>
	<div class="flex gap-2">
		<span
			class="flex items-center justify-center w-fit h-fit rounded-full translate-y-0.5 text-primary-orange"
		>
			<svg
				xmlns="http://www.w3.org/2000/svg"
				width="24"
				height="24"
				viewBox="0 0 24 24"
				fill="none"
				stroke="currentColor"
				stroke-width="2"
				stroke-linecap="round"
				stroke-linejoin="round"
				class="lucide lucide-arrow-right"
				><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg
			>
		</span>
		<p class="text-contrast-permanent">{description}</p>
	</div>
</li>
