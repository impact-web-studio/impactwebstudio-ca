---
// [Data]
import { FooterInfo } from '../../../_data/client';
// [Components]
import ContactInfoItem from './ContactInfoItem.astro';
---

<div class='flex flex-col gap-5 w-fit'>
	<h3 class='uppercase text-primary-orange text-2xl font-secondary font-bold'>
		Contact
	</h3>
	<ul class='flex flex-col gap-y-3'>
		{
			FooterInfo.map((info) => (
				<ContactInfoItem
					field={info.field}
					value={info.value}
					link={info.link}
					icon={info.icon}
				/>
			))
		}
	</ul>
</div>
