---
// [Components]
import FooterLogo from './FooterLogo.astro';
import FooterDescription from './FooterDescription.astro';
import ButtonPrimaryCta from '../../ButtonPrimaryCta.astro';
import FooterLinks from './FooterLinks.astro';
import FooterContact from './FooterContact.astro';
---

<div class="w-full h-fit flex flex-col gap-8 desktop:gap-10">
	<FooterLogo />
	<div class="flex flex-wrap justify-between gap-y-10">
		<div class="flex flex-col gap-y-5 desktop:gap-y-10">
			<FooterDescription />
			<ButtonPrimaryCta class="mt-3 tablet:mt-5 desktop:mt-8" />
		</div>
		<div class="flex flex-wrap gap-x-20 gap-y-10 desktop:gap-x-30">
			<FooterLinks />
			<FooterContact />
		</div>
	</div>
</div>
