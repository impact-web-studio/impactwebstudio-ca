---
// [Props]
interface Props {
	topper: string;
	title: string;
	description: string;
	class?: string;
}
const {
	topper,
	title,
	description,
	class: className = '',
} = Astro.props as Props;
---

<div class=`section-header flex flex-col w-full gap-0.5 ${className}`>
	<h2
		class="text-topper uppercase font-secondary tracking-widest font-bold text-contrast-permanent/70"
	>
		{topper}
	</h2>
	<div class="wrapper w-full flex flex-wrap justify-between gap-5">
		<h3
			class="text-heading uppercase font-secondary font-bold leading-none desktop:max-w-[600px]"
		>
			{title}
		</h3>
		<p class="text-contrast-permament max-w-[600px] desktop:max-w-[550px]">
			{description}
		</p>
	</div>
</div>

<script>
	import { animateComponents } from '../../scripts/animations';

	// Initialize the icon card animations
	document.addEventListener('DOMContentLoaded', () => {
		animateComponents.sectionHeader();
	});
</script>

<style>
	.section-header.variant-1 {
		.text-topper {
			color: var(--color-primary-orange);
		}

		.text-heading,
		p {
			color: var(--color-light-permanent);
		}
	}
</style>
