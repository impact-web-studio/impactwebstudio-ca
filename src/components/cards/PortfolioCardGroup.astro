---
// [Components]
import PortfolioCard from './PortfolioCard.astro';

// [Data]
import Projects from '../../_data/portfolio';
---

<ul class="grid grid-cols-1 desktop:grid-cols-3 gap-6">
	{
		Projects.map((project) => (
			<PortfolioCard
				title={project.title}
				description={project.description}
				image={project.image}
				url={project.url}
			/>
		))
	}
</ul>
