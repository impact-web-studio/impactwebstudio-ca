---
const { key, title, description } = Astro.props;
---

<li class="flex flex-col gap-5">
	<div class="flex flex-col gap-1">
		<span
			class="uppercase text-primary-orange/90 font-bold text-body font-secondary -tracking-wide"
			>step {key + 1}</span
		>
		<h3
			class="text-topper font-secondary font-bold text-light-permanent uppercase"
		>
			{title}
		</h3>
	</div>
	<p class="text-light-permanent">{description}</p>
</li>
