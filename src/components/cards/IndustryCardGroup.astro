---
// [Component]
import IndustryCard from './IndustryCard.astro';

// [Data]
import whoItsFor from '@data/customerIndustries';

// 9 different colors for the background of the cards
const backgrounds = [
	'bg-blue-100 hover:bg-blue-500',
	'bg-rose-100 hover:bg-rose-500',
	'bg-green-100 hover:bg-green-500',
	'bg-cyan-100 hover:bg-cyan-500',
	'bg-amber-100 hover:bg-amber-500',
	'bg-indigo-100 hover:bg-indigo-500',
	'bg-teal-100 hover:bg-teal-500',
	'bg-fuchsia-100 hover:bg-fuchsia-500',
	'bg-orange-100 hover:bg-orange-500',
];
---

<div class='industry-card-container flex flex-wrap gap-y-6 gap-x-4 tablet:gap-x-6'>
	{
		whoItsFor.map((card, index) => (
			<IndustryCard
				icon={card.icon}
				title={card.industry}
				description={card.description}
				className=`${backgrounds[index]}`
			/>
		))
	}
</div>

