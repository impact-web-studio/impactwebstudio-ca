---
// [Component]
import IndustryCard from './IndustryCard.astro';

// [Data]
import whoItsFor from '../../_data/customerIndustries';

// 9 different colors for the background of the cards
const backgrounds = [
	'bg-blue-200 hover:bg-blue-500',
	'bg-rose-200 hover:bg-rose-500',
	'bg-green-200 hover:bg-green-500',
	'bg-cyan-200 hover:bg-cyan-500',
	'bg-teal-200 hover:bg-teal-500',
	'bg-yellow-200 hover:bg-yellow-500',
	'bg-indigo-200 hover:bg-indigo-500',
	'bg-fuchsia-200 hover:bg-fuchsia-500',
	'bg-orange-200 hover:bg-orange-500',
];
---

<div class='flex flex-wrap gap-y-6 gap-x-4 md:gap-x-6'>
	{
		whoItsFor.map((card, index) => (
			<IndustryCard
				icon={card.icon}
				title={card.industry}
				description={card.description}
				className=`${backgrounds[index]}`
			/>
		))
	}
</div>

