---
// [Data]
import whatWeOffer from '../../_data/whatWeOffer';

// [Component]
import OfferCard from './OfferCard.astro';
---

<div class='flex flex-wrap gap-y-6 gap-x-4 md:gap-x-6'>
	{
		whatWeOffer.map((card) => (
			<OfferCard
				icon={card.icon}
				title={card.title}
				description={card.description}
			/>
		))
	}
</div>
