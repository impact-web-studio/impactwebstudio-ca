---
// [Data]
import whatWeOffer from '../../_data/whatWeOffer';

// [Component]
import OfferCard from './OfferCard.astro';
---

<div
	class='offer-card-container grid grid-cols-1 md:grid-cols-2 gap-y-6 gap-x-4 md:gap-x-6 md:gap-y-8 lg:justify-between'
>
	{
		whatWeOffer.map((card) => (
			<OfferCard
				icon={card.icon}
				title={card.title}
				description={card.description}
			/>
		))
	}
</div>
