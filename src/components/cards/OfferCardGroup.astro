---
// [Data]
import whatWeOffer from '@data/whatWeOffer';

// [Component]
import OfferCard from './OfferCard.astro';
---

<div
	class="offer-card-container grid grid-cols-1 tablet:grid-cols-2 gap-y-6 gap-x-4 tablet:gap-x-6 tablet:gap-y-8 desktop:justify-between"
>
	{
		whatWeOffer.map((card) => (
			<OfferCard
				icon={card.icon}
				title={card.title}
				description={card.description}
			/>
		))
	}
</div>
