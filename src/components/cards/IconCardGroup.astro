---
// [Component]
import IconCard from './IconCard.astro';

// [Data]
import whatWeDo from '../../_data/whatWeDo';
---

<div class='flex flex-wrap gap-y-4 gap-x-3'>
	{
		whatWeDo.map((card) => (
			<IconCard
				icon={card.icon}
				title={card.title}
				description={card.description}
				ctaText='learn more'
				ctaLink='/services'
			/>
		))
	}
</div>

