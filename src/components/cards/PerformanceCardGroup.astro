---
// [Components]
import PerformanceCard from './PerformanceCard.astro';

// [Data]
import Performance from '@data/performance';
---

<ul class="flex flex-col gap-6">
	{
		Performance.map((card) => (
			<PerformanceCard
				icon={card.icon}
				title={card.title}
				description={card.description}
			/>
		))
	}
</ul>
