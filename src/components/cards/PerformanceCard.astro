---
const { icon, title, description, class: className } = Astro.props;

let IconComponent;
try {
	IconComponent = await import(`../../assets/icons/${icon}.astro`).then(
		(module) => module.default
	);
} catch (e) {
	console.error(`Failed to load icon: ${icon}`);
}
---

<li class=`${className}`>
	<div class='flex gap-3 items-center'>
		<span class='icon-wrapper h-4 w-4'>
			{
				IconComponent && (
					<IconComponent
						width='100%'
						height='100%'
					/>
				)
			}
		</span>
		<h3 class='capitalize font-bold text-lg'>{title}</h3>
	</div>
	<p class='lg:max-w-[600px]'>{description}</p>
</li>
