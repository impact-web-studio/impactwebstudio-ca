---
import { CtaLink } from '../_data/navigation';

const { layout, spacing, colors, text } = {
	layout: 'text-center rounded-full',
	spacing: 'py-2 px-6 md:py-4 md:px-8',
	colors: 'bg-primary-blue text-white hover:bg-primary-orange',
	text: 'uppercase font-bold whitespace-nowrap text-button',
};

const { ctaText = 'get started', classNames = '' } = Astro.props;
---

<a
	class=`${layout} ${spacing} ${colors} ${text} ${classNames}`
	href={CtaLink.url}
	>{ctaText}</a
>
