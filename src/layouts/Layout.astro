---
import { SeoPropsSchema } from '../types/layout';
import Head from '../components/global/Head.astro';
import Header from '../components/global/header/Header.astro';
import Footer from '../components/global/footer/Footer.astro';

const validatedProps = SeoPropsSchema.parse(Astro.props);
---

<!doctype html>
<html lang="en">
	<head>
		<Head
			title={validatedProps.title}
			description={validatedProps.description}
			canonicalUrl={validatedProps.canonicalUrl}
			robots={validatedProps.robots}
		/>

		<!-- Page Configs -->
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1"
		/>
		<link
			rel="icon"
			type="image/svg+xml"
			href="/favicon.svg"
		/>
		<meta
			name="generator"
			content={Astro.generator}
		/>
	</head>

	<body>
		<Header />
		<main class="w-full h-fit mx-auto">
			<slot />
		</main>
		<Footer />
	</body>
</html>
