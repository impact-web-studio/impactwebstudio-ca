{
	"compilerOptions": {
		"strictNullChecks": true,
		"checkJs": false,
		"baseUrl": ".",
		"paths": {
			"@assets/*": ["src/assets/*"],
			"@layouts/*": ["src/layouts/*"],
			"@data/*": ["src/data/*"],
			"@pages/*": ["src/pages/*"],
			"@scripts/*": ["src/scripts/*"],
			"@styles/*": ["src/styles/*"],
			"@components/*": ["src/components/*"]
		},
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"esModuleInterop": true
	},
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"]
}
